### Settings from original zathurarc ###
set scroll-step 125
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set adjust-open "best-fit"
set font "Terminus 11"

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#c5c4c5'
set completion-bg '#171617'

# Command line completion group elements
set completion-group-fg '#725c52'
set completion-group-bg '#171617'

# Current command line completion element
set completion-highlight-fg '#171617'
set completion-highlight-bg '#c5c4c5'

# Default foreground/background color
set default-bg rgba(23,22,23,0.80)

# Input bar
set inputbar-fg '#c5c4c5'
set inputbar-bg '#171617'

# Notification
set notification-fg '#c5c4c5'
set notification-bg '#171617'

# Error notification
set notification-error-fg '#c5c4c5'
set notification-error-bg '#6c4339'

# Warning notification
set notification-warning-fg '#c5c4c5'
set notification-warning-bg '#6c4339'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#c5c4c5'
set statusbar-bg '#171617'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#725c52'
set highlight-active-color '#725c52'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#c5c4c5'

# 'Loading...' text
set render-loading-fg '#c5c4c5'
set render-loading-bg '#171617'

# Index mode
set index-fg '#c5c4c5'
set index-bg '#171617'

# Selected element in index mode
set index-active-fg '#171617'
set index-active-bg '#c5c4c5'