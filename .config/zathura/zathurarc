### Settings from original zathurarc ###
set scroll-step 125
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set adjust-open "best-fit"
set font "Terminus 11"

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#c5c6c6'
set completion-bg '#1a1c1d'

# Command line completion group elements
set completion-group-fg '#a0826e'
set completion-group-bg '#1a1c1d'

# Current command line completion element
set completion-highlight-fg '#1a1c1d'
set completion-highlight-bg '#c5c6c6'

# Default foreground/background color
set default-bg rgba(26,28,29,0.80)

# Input bar
set inputbar-fg '#c5c6c6'
set inputbar-bg '#1a1c1d'

# Notification
set notification-fg '#c5c6c6'
set notification-bg '#1a1c1d'

# Error notification
set notification-error-fg '#c5c6c6'
set notification-error-bg '#80645c'

# Warning notification
set notification-warning-fg '#c5c6c6'
set notification-warning-bg '#80645c'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#c5c6c6'
set statusbar-bg '#1a1c1d'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#a0826e'
set highlight-active-color '#a0826e'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#c5c6c6'

# 'Loading...' text
set render-loading-fg '#c5c6c6'
set render-loading-bg '#1a1c1d'

# Index mode
set index-fg '#c5c6c6'
set index-bg '#1a1c1d'

# Selected element in index mode
set index-active-fg '#1a1c1d'
set index-active-bg '#c5c6c6'