### Settings from original zathurarc ###
set scroll-step 125
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set adjust-open "best-fit"
set font "Terminus 11"

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#c5c6c7'
set completion-bg '#191c1f'

# Command line completion group elements
set completion-group-fg '#4e7282'
set completion-group-bg '#191c1f'

# Current command line completion element
set completion-highlight-fg '#191c1f'
set completion-highlight-bg '#c5c6c7'

# Default foreground/background color
set default-bg rgba(25,28,31,0.80)

# Input bar
set inputbar-fg '#c5c6c7'
set inputbar-bg '#191c1f'

# Notification
set notification-fg '#c5c6c7'
set notification-bg '#191c1f'

# Error notification
set notification-error-fg '#c5c6c7'
set notification-error-bg '#426273'

# Warning notification
set notification-warning-fg '#c5c6c7'
set notification-warning-bg '#426273'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#c5c6c7'
set statusbar-bg '#191c1f'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#4e7282'
set highlight-active-color '#4e7282'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#c5c6c7'

# 'Loading...' text
set render-loading-fg '#c5c6c7'
set render-loading-bg '#191c1f'

# Index mode
set index-fg '#c5c6c7'
set index-bg '#191c1f'

# Selected element in index mode
set index-active-fg '#191c1f'
set index-active-bg '#c5c6c7'