#!/usr/bin/env sh
#                          ﱦ 齃     ﮂ  ﵁ 爵        ﭵ     ﱦ  ﰊ 異 ﴱ אַ  'Y⃣'
# TODO: https://github.com/FelixKratz/SketchyBar/discussions/12
# cpu mini, network mini, spotify controls look cool

echo "sketchybar: loading configuration..."
# BAR SETUP
sketchybar -m --bar height=18       \
                    position=top    \
                    padding_left=5  \
                    padding_right=5 \
                    blur_radius=5   \
                    topmost=off     \
                    display=all

sketchybar -m --add event window_focus
sketchybar -m --add event title_change

# GLOBAL DEFAULTS
sketchybar -m --default cache_scripts=on \
                        drawing=on       \
                        icon.font="Tamzen Nerd Font:Medium:14.0" \
                        label.font="Tamzen Nerd Font:Medium:14.0" \

# SPACE DEFAULTS
sketchybar -m --default label.padding_left=5 \
                        label.padding_right=0 \
                        icon.padding_left=8 \
                        icon.padding_right=0 \
                        icon.highlight_color=0xfffb4934 \

# SPACES
sketchybar -m --add space one left \
              --set one associated_display=1 \
                        associated_space=1 \
                        icon.padding_left=2 \
                        icon=I \
                        label=dev \
                        click_script="yabai -m space --focus 1" \
                        icon_padding_left=0

sketchybar -m --add space two left \
              --set two associated_display=1 \
                        associated_space=2 \
                        icon=II \
                        label=web \
                        click_script="yabai -m space --focus 2" \

sketchybar -m --add space three left \
              --set three associated_display=1 \
                          associated_space=3 \
                          icon=III \
                          label=idle \
                          click_script="yabai -m space --focus 3" \

sketchybar -m --add space four left \
              --set four associated_display=1 \
                         associated_space=4 \
                         icon=IV \
                         label=misc \
                         click_script="yabai -m space --focus 4" \

sketchybar -m --add space five left \
              --set five associated_display=2 \
                        associated_space=5 \
                        icon=Z \
                        icon.padding_left=1 \
                        click_script="yabai -m space --focus 6" \

sketchybar -m --add space six left \
              --set six associated_display=2 \
                        associated_space=6 \
                        icon=X \
                        click_script="yabai -m space --focus 7" \

sketchybar -m --add space seven left \
              --set seven associated_display=2 \
                        associated_space=7 \
                        icon=C \
                        click_script="yabai -m space --focus 8" \

################## LEFT ITEMS ##################

# Window Title
sketchybar -m --add item title left \
              --set title label.padding_left=3 \
                          icon.padding_left=0 \
                          script="~/.config/sketchybar/plugins/title.sh" \
              --subscribe title window_focus \
                                front_app_switched \
                                space_change \
                                title_change \

################# RIGHT ITEMS ####################
# Clock & Date
sketchybar -m --add item clock right \
              --set clock update_freq=1 \
                          script="~/.config/sketchybar/plugins/clock.sh" \
                          label.padding_left=2 \
                          label.padding_right=1 \
                          icon.padding_left=3 \
                          icon.padding_right=0 \

# Volume
sketchybar -m --add item volume right \
              --set volume script="~/.config/sketchybar/plugins/volume.sh" \
                           icon.padding_left=2 \
                           label.padding_right=6 \
                           label.padding_left=4 \
                           icon.color=0xB2ffffff \
                           lazy=off \
                           update_freq=5

# Battery
sketchybar -m --add item battery right \
              --set battery update_freq=10 \
                            script="~/.config/sketchybar/plugins/power.sh" \
                            icon= \
                            label.padding_left=2 \
                            label.padding_right=4 \
                            icon.padding_left=0 \
                            icon.padding_right=3

# Cpu usage graph
sketchybar -m --add graph cpu_user right 130 \
              --set cpu_user script="~/.config/sketchybar/plugins/cpu_graph.sh" \
                             graph.color=0xffffffff \
                             update_freq=5 \
                             width=0 \
                             icon.color=0xfffabd2f \
                             icon.padding_right=3 \
                             lazy=on \
              --add graph cpu_sys right 130 \
              --set cpu_sys graph.color=0xff48aa2a

# Weather
sketchybar -m --add item weather right \
              --set weather update_freq=600 \
                            icon.padding_left=6 \
                            label.padding_right=24 \
                            lazy=off \
                            script="~/.config/sketchybar/plugins/weather.sh" \
                            click_script="open https://darksky.net/forecast/35.2828,-120.6596/us12/en"

###################### CENTER ITEMS ###################
# Spotify
sketchybar -m --default icon.padding_right=0 \
                        icon.padding_left=8 \
                        label.padding_left=0 \
                        label.padding_right=0 \
                        lazy=off \
                        drawing=off \
              --add event spotify_change "com.spotify.client.PlaybackStateChanged" \
              --add item spotify_name center \
              --set spotify_name script="~/.config/sketchybar/plugins/spotify.sh" \
                                 label.padding_right=10 \
              --subscribe spotify_name spotify_change \
              --add item spotify_back center \
              --set spotify_back click_script="~/.config/sketchybar/plugins/spotify.sh" \
                                 icon='' \
                                 icon.padding_left=0 \
              --add item spotify_play_pause center \
              --set spotify_play_pause click_script="~/.config/sketchybar/plugins/spotify.sh" \
                                       icon='' \
              --add item spotify_next center \
              --set spotify_next click_script="~/.config/sketchybar/plugins/spotify.sh" \
                                 icon='' \
                                    label.padding_left=0 \
                                    icon.padding_left=6 \
              --add bracket spotify_control \
                            spotify_back \
                            spotify_play_pause \
                            spotify_next

sketchybar -m --update

echo "sketchybar: configuration loaded"
echo "sketchybar: loading colors..."
source ~/.config/sketchybar/sketchybarcolors
