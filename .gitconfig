[core]
	excludesfile = ~/.gitignore
	editor = nvim
[credential]
	helper = /usr/local/share/gcm-core/git-credential-manager-core
[credential "https://dev.azure.com"]
	useHttpPath = true
[commit]
	gpgsign = true
[diff]
  tool = nvimdiff
[difftool "nvimdiff"]
	cmd = nvim -d \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "nvimdiff"]
	cmd = nvim -d \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[color]
    ui = auto
[alias]
    a = add
    rm = rm -r
    d = diff
    co = checkout
    c = commit
    cm = commit -m
    ca = commit -a
    cam = commit -a -m
    p = push origin
    pl = pull origin
    s = status
    st = status
